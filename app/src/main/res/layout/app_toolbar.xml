<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/dashboard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/VerifoneToolbarStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/pad_8"
            android:paddingTop="@dimen/pad_8"
            android:gravity="center"
            >


            <ImageButton
                    android:id="@+id/main_toolbar_start"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_menu"
                    android:layout_gravity="start|center_vertical"
                    android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/pad_8"
            android:paddingTop="@dimen/pad_8"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/bonushub_logo"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_marginEnd="@dimen/pad_16"
                android:layout_marginStart="@dimen/pad_8"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:src="@drawable/amex_logo"
                android:contentDescription="@string/app_name"
                />

            <ImageView
                android:id="@+id/main_toolbar_tv"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:background="@color/white"
                android:textSize="@dimen/text_size_xregular"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/pad_16"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/pad_16"
                android:layout_marginEnd="@dimen/pad_16"
                android:src="@drawable/bonushub_image" />
        </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>


